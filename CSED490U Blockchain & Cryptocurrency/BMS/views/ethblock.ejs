<!DOCTYPE HTML>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title> DPNM Blockchain Monitoring System </title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
	<!-- Additional Styling Defined -->
	<style>
	.jumbotron
	{
		background-image: linear-gradient(90deg, rgb(0, 4, 40) 0%, rgb(0, 52, 109) 100%);
	}
	.nav-bg-gradient {
		background-image: linear-gradient(90deg, rgb(0, 4, 40) 0%, rgb(0, 52, 109) 100%);
	}
	.nav-bg-color {
		background: #004a7c;
	}
	.cliente {
		margin-top:10px;
		border: #cdcdcd medium solid;
		border-radius: 10px;
		-moz-border-radius: 10px;
		-webkit-border-radius: 10px;
		font-family: Montserrat, sans-serif;
		font-weight: 400;
		font-size: 1.1rem;
		text-transform: uppercase;
		font-style: normal;
		justify-content: center;
		-ms-flex-pack:center;
		padding: 1rem 1rem;
		box-sizing: border-box;
	}
	.rounded-left {
  		border-top-left-radius: 1rem !important;
  		border-bottom-left-radius: 1rem !important;
	}
	.rounded-right {
  		border-top-right-radius: 1rem !important;
  		border-bottom-right-radius: 1rem !important;
	}
	.myfontface {
		font-family: Montserrat, sans-serif
	}
	</style>
</head>
<body>
	<!-- Section for top navigation bar -->
	<section height="4.5rem">
		<div class="container-fluid">
			<nav class="navbar navbar-expand-lg nav-bg-color">
    			<ul class="navbar-nav">
    				<li class="nav-item">
    					<a class="nav-link py-4 px-4 text-uppercase text-white font-weight-bold h4" href="/bms">Blockchain</a>
    				</li>
      				<li class="nav-item">
        				<a class="nav-link py-4 px-4 text-uppercase text-white h6" href="#">Link 1</a>
      				</li>
      				<li class="nav-item">
        				<a class="nav-link py-4 px-4 text-uppercase text-white h6" href="#">Link 2</a>
      				</li>
      				<li class="nav-item">
        				<a class="nav-link py-4 px-4 text-uppercase text-white h6" href="#">Link 3</a>
      				</li>
      				<li class="nav-item">
        				<a class="nav-link py-4 px-4 text-uppercase text-white h6" href="#">Link 4</a>
      				</li>
    			</ul>
    			<ul class="navbar-nav ml-auto">
    				<li class="nav-item">
    					<div class="input-group">
    						<div class="input-group-append">
    							<span class="input-group-text border-right-0 rounded-left"><i class="fas fa-search"></i></span>
    						</div>
    						<input class="form-control border-left-0 rounded-right" type="search" placeholder="Blocks, Hash, Transactions" aria-label="Search">
    					</div>
    				</li>
    				<li class="nav-item">
    					<button class="btn btn-success mx-4" type="submit">Search</button>
    				</li>
    			</ul>
			</nav>
		</div>
	</section>

	<!-- Section for the body -->
	<section height="60rem">
		<div class="container">
			<br/>
			<nav class="navbar navbar-expand">
				<ul class="navbar-nav">
					<li class="nav-item">
						<i class="fab fa-ethereum fa-2x mr-3"></i>
						<span class="h3 mr-3 myfontface"><a href="/bms"> Ethereum </a></span>
					</li>
					<i class="fas fa-arrow-right fa-2x"></i>
					<span class="h3 ml-3 myfontface"> Block </span>
				</ul>
				<ul class="navbar-nav ml-auto">
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="mydropdownmenu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-hasexpanded="false"><span class="h4 myfontface"> ETH </span></button>
						<ul class="dropdown-menu" aria-labelledby="mydropdownmenu">
							<button class="dropdown-item myfontface">ETH</button>
							<button class="dropdown-item myfontface">USD</button>
						</ul>
					</div>
				</ul>
			</nav>
			<hr style="height:5px;border:none;background-color:#ffbf00;" />
		</div>

		<div class="container">
			<br/>
			<span class="h4">Block Details</span>
			<div class="row">
				<div class="col">
					<br/>
					<table class="table">
						
						<thead>
							<tr>
								<th scope="col">Summary</th>
							</tr>
						</thead>
						<tbody>
							<% for(var i=0; i < 1; i++) { %>
							<tr>
								<td>Block Height</td>
								<td><%= ethblockinfo[i].blocknumber %></td>
							</tr>
							<tr>
								<td>Miner</td>
								<td><%= ethblockinfo[i].miner %></td>
							</tr>
							<tr>
								<td>Timestamp</td>
								<td><%= ethblockinfo[i].ts %></td>
							</tr>
							<tr>
								<td>Difficulty</td>
								<td><%= ethblockinfo[i].difficulty %></td>
							</tr>
							<tr>
								<td>Total Difficulty</td>
								<td><%= ethblockinfo[i].totaldifficulty %></td>
							</tr>
							<tr>
								<td>Size</td>
								<td><%= ethblockinfo[i].size %> KB</td>
							</tr>
							<tr>
								<td>Nonce</td>
								<td><%= ethblockinfo[i].nonce %></td>
							</tr>
							<tr>
								<td>Block Reward</td>
								<td>3 ETH</td>
							</tr>
							<tr>
								<td>Hash</td>
								<td><%= ethblockinfo[i].hash %></td>
							</tr>
							<tr>
								<td>Previous Hash</td>
								<td><%= ethblockinfo[i].parenthash %></td>
							</tr>
							<tr>
								<td>Sha3Uncles Hash</td>
								<td><%= ethblockinfo[i].sha3uncles %></td>
							</tr>
							<tr>
								<td>Gas Used</td>
								<td><%= ethblockinfo[i].gasused %></td>
							</tr>
							<tr>
								<td>Gas Limit</td>
								<td><%= ethblockinfo[i].gaslimit %></td>
							</tr>
							<tr>
								<td>Number of Transactions</td>
								<td><%= ethblockinfo[i].numtxn %></td>
							</tr>
							<tr>
								<td>Number of Uncles</td>
								<td><%= ethblockinfo[i].numuncles %></td>
							</tr>
							<% } %>
						</tbody>

					</table>
				</div>
			</div>
		</div>
	</section>
</body>
</html>